{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "jen"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/AzureSqlDatabase1')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"parameters": {
					"Server_Name": {
						"type": "String",
						"defaultValue": "ospri-reporting-dev.database.windows.net"
					},
					"DB_Name": {
						"type": "String",
						"defaultValue": "sqldb-dev-etlcontrol"
					},
					"user_name": {
						"type": "String",
						"defaultValue": "report-etl-admin"
					},
					"key_vault_URL": {
						"type": "string",
						"defaultValue": "https://kv-aue-dev-ospri-01.vault.azure.net/"
					}
				},
				"annotations": [],
				"type": "AzureSqlDatabase",
				"typeProperties": {
					"connectionString": {
						"type": "SecureString",
						"value": "**********"
					},
					"password": {
						"type": "AzureKeyVaultSecret",
						"store": {
							"referenceName": "AzureKeyVault1",
							"type": "LinkedServiceReference",
							"parameters": {
								"KeyVaultURL": {
									"value": "@linkedService().key_vault_URL",
									"type": "Expression"
								}
							}
						},
						"secretName": {
							"value": "@{linkedService().user_name}",
							"type": "Expression"
						}
					}
				}
			},
			"dependsOn": []
		}
	]
}